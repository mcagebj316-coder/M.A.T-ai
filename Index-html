<body>
  <h1>ðŸ‘‹ Meet Mat</h1>
  <div id="chat"></div>

  <div id="inputArea">
    <input id="userInput" type="text" placeholder="Say something to Mat...">
    <button onclick="sendMessage()">Send</button>
    <button onclick="startVoice()">ðŸŽ¤ Speak</button>
  </div>

  <script>
    const chat = document.getElementById("chat");
    const input = document.getElementById("userInput");

    // Load memory from localStorage
    let memory = JSON.parse(localStorage.getItem("matMemory")) || {};

    function addMessage(text, sender) {
      const msg = document.createElement("div");
      msg.className = "message " + sender;
      msg.textContent = text;
      chat.appendChild(msg);
      chat.scrollTop = chat.scrollHeight;
    }

    function sendMessage() {
      const text = input.value.trim();
      if (!text) return;
      addMessage(text, "user");
      input.value = "";
      respond(text);
    }

    function respond(text) {
      let reply = "";

      // Simple personality + memory logic
      if (text.toLowerCase().includes("remember")) {
        const fact = text.replace(/remember/i, "").trim();
        memory.fact = fact;
        localStorage.setItem("matMemory", JSON.stringify(memory));
        reply = "Got it! I'll remember that you said: " + fact;
      } else if (text.toLowerCase().includes("what do you remember")) {
        reply = memory.fact ? "You told me: " + memory.fact : "I don't have anything saved yet.";
      } else {
        // Default personality
        const responses = [
          "That's interesting! Tell me more.",
          "I like how you're thinking about this.",
          "Hmm, letâ€™s explore that together.",
          "Youâ€™re building something cool here!"
        ];
        reply = responses[Math.floor(Math.random() * responses.length)];
      }

      addMessage(reply, "mat");
      speak(reply);
    }

    // Voice output
    function speak(text) {
      const synth = window.speechSynthesis;
      const utter = new SpeechSynthesisUtterance(text);
      utter.voice = synth.getVoices().find(v => v.lang.startsWith("en")) || null;
      synth.speak(utter);
    }

    // Voice input
    function startVoice() {
      const recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
      recognition.lang = "en-US";
      recognition.start();
      recognition.onresult = (event) => {
        const spoken = event.results[0][0].transcript;
        addMessage(spoken, "user");
        respond(spoken);
      };
    }

    // Greeting
    addMessage("Hi, I'm Mat! Ready to chat and remember things for you.", "mat");
  </script>
</body>
</html>
